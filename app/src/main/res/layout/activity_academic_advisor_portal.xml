<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prototype.AcademicAdvisorPortal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="390dp"
        android:layout_height="136dp"
        app:srcCompat="@color/colorPrimary"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.409" />

    <TextView
        android:id="@+id/welcomeSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginBottom="8dp" />
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.727">


        <TextView
            android:id="@+id/newRequestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Request"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="158dp" />

        <ImageButton
            android:id="@+id/newRequestButton"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:onClick="goNewActivity"
            app:srcCompat="@drawable/list_square_button"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="328dp" />

        <TextView
            android:id="@+id/oldRequestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old Request"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="297dp" />

        <ImageButton
            android:id="@+id/oldRequestButton"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:onClick="goOldActivity"
            app:srcCompat="@drawable/old_list_square_button"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="191dp" />
    </LinearLayout>
    L

</android.support.constraint.ConstraintLayout>
